<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-fixed-top navbar-dark azul-1">
        <div class="container">
            <div class="navbar-collapse">
                <ul>@Html.ActionLink("Movie Mania", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</ul>


                @if ((String)Session["User_Type"] == "Admin")
                {
                    <ul>@Html.ActionLink("Movies", "Index", "Movies", new { area = "" }, new { @class = "navbar-brand" })</ul>
                    <ul>@Html.ActionLink("Users", "Index", "Users", new { area = "" }, new { @class = "navbar-brand" })</ul>
                    <ul>@Html.ActionLink("Profile", "Details", "Users", new { id = Session["Id"] }, new { @class = "navbar-brand" })</ul>

                }
                @if ((String)Session["User_Type"] == "Client")
                {
                    <ul>@Html.ActionLink("Movies", "Index", "Movies", new { area = "" }, new { @class = "navbar-brand" })</ul>
                    <ul>@Html.ActionLink("Profile", "Details", "Users", new { id = Session["Id"] }, new { @class = "navbar-brand" })</ul>
                }
                @if (Session["Id"] == null)
                {
                    <ul style="float:right; color:white">@Html.ActionLink("Iniciar Sesion", "Login", "Users", new { area = "" }, new { @class = "navbar-brand" })</ul>
                }

            </div>
        </div>
        </nav>
        <div class="container-fluid" style="margin-top:20px">
            @RenderBody()
           
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
