@model Movie_Mania_2.Models.Movie

@{
    ViewBag.Title = "Edit";
}

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-xs-5 auto-centrar">
                <div class="card" style="margin-top:60px">
                    <h2 class="card-header text-white azul-2" style="margin-top:0px ; margin-bottom:15px">Editar Pelicula</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group p-cajas">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group p-cajas">
                        @Html.LabelFor(model => model.Sinopsis, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Sinopsis, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sinopsis, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group p-cajas">
                        @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.EnumDropDownListFor(model => model.Genero, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group p-cajas">
                        @Html.LabelFor(model => model.Estreno, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Estreno, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Estreno, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="p-boton">
                            <input type="submit" value="Guardar" class="btn btn-success azul-3" />
                        </div>
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-success azul-1 float-right mt-3" onclick="location.href='@Url.Action("Index", "Movies")'">Volver</button>
                </div>
            </div>
        </div>
    </div>
            }


        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
